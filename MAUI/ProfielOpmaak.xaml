<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.ProfielOpmaak"
             Title="ProfielOpmaak">
    <VerticalStackLayout>
        <Label 
            Text="Voornaam"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Placeholder="Wessel"
               HorizontalOptions="Center"/>
        <Label 
            Text="Geboortedatum"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Placeholder="10-12-2003"
               HorizontalOptions="Center"/>
        <Label 
            Text="Omschrijving"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Placeholder="Hallo, mijn naam is Wessel"
               HorizontalOptions="Center"/>
        <Label 
            Text="Locatie"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Placeholder="Enschede"
               HorizontalOptions="Center"/>
        <Button Text="Opslaan" />
    </VerticalStackLayout>
</ContentPage>