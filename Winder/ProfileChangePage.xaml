
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.ProfileChange"
             Title="Profiel">
    <VerticalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Label 
            x:Name="lblFirstname"
            Text="Voornaam"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Entry x:Name="Firstname"
               MaxLength="15"
               Placeholder=""
               HorizontalOptions="Center"
               TextChanged="FirstnameTextChanged" />
            <Label 
            x:Name="lblMiddlename"
            Text="tussenvoegsel"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Entry x:Name="Middlename"
               MaxLength="10"
               Placeholder=""
               HorizontalOptions="Center"
               TextChanged="MiddlenameTextChanged" />
            <Label 
            x:Name="lblLastname"
            Text="Achternaam"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
            <Entry x:Name="Lastname"
               MaxLength="15"
               Placeholder=""
               HorizontalOptions="Center"
               TextChanged="LastnameTextChanged" />
        </HorizontalStackLayout>

        <Label 
            x:Name="lblBirthdate"  
            Text="Leeftijd: "
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <DatePicker x:Name="Birthdate"
            DateSelected="DateOfBirthSelectedDate"
            HorizontalOptions="Center"
            />
        <Label 
            x:Name="lblBio"
            Text="Omschrijving"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            />
        <Entry x:Name="Bio"
               MaxLength="150"
               Placeholder=""
               HorizontalOptions="Center"
               TextChanged="BioTextChanged"
               />
        <Picker 
        Title="Gender"
        x:Name="Gender"
        HorizontalOptions="Center">
            <Picker.Items>
                <x:String>Kies</x:String>
                <x:String>Man</x:String>
                <x:String>Vrouw</x:String>
            </Picker.Items>
        </Picker>
        <Picker         
        Title="Voorkeur"
            x:Name="Preference"
        HorizontalOptions="Center">
            <Picker.Items>
                <x:String>Kies</x:String>
                <x:String>Man</x:String>
                <x:String>Vrouw</x:String>
            </Picker.Items>
        </Picker>
        <Picker 
            x:Name="InterestSelection"
        Title="Interesses"
        HorizontalOptions="Center"
        SelectedIndexChanged="PickerIndexChanged">
            <Picker.Items>

            </Picker.Items>
        </Picker>
        <ListView MaximumHeightRequest="100" HorizontalOptions="Center" x:Name="ListInterests" ItemSelected="ListInterests_ItemSelected">
            <ListView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                </x:Array>
            </ListView.ItemsSource>
        </ListView>
        <Button x:Name="ChangeProfile"             
                Text="Opslaan"
                Clicked="ChangeUserData"/>
    </VerticalStackLayout>
</ContentPage>