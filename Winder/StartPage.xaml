<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.StartPage" 
             Shell.NavBarIsVisible="False"
             BackgroundColor="#CC415F">
    <Shell.BackButtonBehavior  >
        <BackButtonBehavior IsEnabled="False" IsVisible="False"></BackButtonBehavior>
    </Shell.BackButtonBehavior>
    <VerticalStackLayout VerticalOptions="Center"  >
            
        <Image 
            Source="zwartvierkant.png"
            WidthRequest="300"
            Margin="0, 0, 0 ,-300"            
            HeightRequest="300"
            Opacity="0.5"/>

        <Image  
            Source="winderlogo_zonderwindesheimdating.png"
            HeightRequest="150"
            WidthRequest="1000"
            Margin="0,-30,0, 5"/>

        <Button 
            x:Name="Inloggen"
            Text="Inloggen"
            Clicked="LoginButton"
            WidthRequest="150"
            BackgroundColor="White"
            TextColor="Black"
            Margin="0,0,0,5"/>

        <Button 
            x:Name="Registreren"
            Text="Registreren?"
            Clicked="RegisterButton"
            WidthRequest="150"
            BackgroundColor="White"
            TextColor="Black"
            Margin="0,0,0,5"/>
                
    </VerticalStackLayout>

</ContentPage>